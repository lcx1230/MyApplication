<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 选中状态（粉色背景 + 圆角 + 灰色边框） -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/> <!-- 选中时粉色背景 -->
            <corners android:radius="16dp"/> <!-- 保持圆角 -->
            <stroke android:width="2dp" android:color="@color/colorGrey"/> <!-- 灰色边框 -->
        </shape>
    </item>

    <!-- 默认状态（白色背景 + 圆角 + 灰色边框） -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- 默认白色背景 -->
            <corners android:radius="16dp"/> <!-- 保持圆角 -->
            <stroke android:width="2dp" android:color="@color/colorGrey"/> <!-- 灰色边框 -->
        </shape>
    </item>
</selector>
